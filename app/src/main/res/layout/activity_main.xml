<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.labuser.startingotheractivities.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userInput"
        android:layout_below="@+id/btnButton"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="106dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I dare you"
        android:id="@+id/btnButton"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/userInput"
        android:onClick="sendSMS" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/btnCall"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="makeCall" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/btnMap"
        android:layout_below="@+id/btnCall"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:onClick="mapIt" />
</RelativeLayout>
